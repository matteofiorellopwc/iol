<apex:page controller="ControllerGlobalCloseAndWin">
    
    <script src="/soap/ajax/27.0/connection.js" type="text/javascript"></script>
    <script src="/soap/ajax/27.0/apex.js" type="text/javascript"></script>
    <apex:includeScript value="{!URLFOR($Resource.jquery,'jquery.js')}"/>
    <script type="text/javascript">
    
    Visualforce.remoting.timeout = 120000;
    
    j$ = jQuery.noConflict();
     
    function init(){                
        setTimeout(function(){step0()},500);        
    }
    
    j$(document).ready(function(){
        j$('#col0_load').show();
        j$('#col0_wait').hide();
        step0();  //in component cpdavailability
    });
    
    function errorCpdCallback(errors){
        j$('#col0_error').show();
        j$('.errorDetail0').show();
        j$('#backToOpp').show();
        j$('#col0_load').hide();
        j$('.errorDetail0').html(errors);
        j$('.errorDetail0_button').show();
    }
    
    //remote VF:
    function step0(){
        
        var arg = '{!Id}';    
        j$('#col0_load').show();
        j$('#col0_wait').hide();
        
        
        var namespace = '{!$RemoteAction.ControllerGlobalCloseAndWin.chiudiEVinciStep0}';

        Visualforce.remoting.Manager.invokeAction(
            namespace,
            arg,                
            function(result, event){
                if (result != null && !result.isError) {
                    //ok, step executed with no errors
                    j$('#col0_done').show();
                    j$('#col0_load').hide();
                    j$('#col1_load').show();
                    j$('#col1_wait').hide();
                    step1();
                } else {
                    //error
                    j$('#col0_error').show();
                    j$('.errorDetail0').show();
                    j$('#backToOpp').show();
                    j$('#col0_load').hide();
                    var mes;
                    if(result != null && result.message != null){
                        mes = result.message;
                    }else{
                        mes = event.message;
                    }
                    var err = j$('<div/>').html(mes).text();
                    j$('.errorDetail0').html(err);
                    j$('.errorDetail0_button').show();
                }               
            }, 
            {escape: true}
        ); 
    }
    function step1(){
        
        var arg = '{!Id}';    
        j$('#col1_load').show();
        j$('#col1_wait').hide();
        
        
        var namespace = '{!$RemoteAction.ControllerGlobalCloseAndWin.chiudiEVinciStep1}';

        Visualforce.remoting.Manager.invokeAction(
            namespace,
            arg,                
            function(result, event){
                if (result != null && !result.isError) {
                    //ok, step executed with no errors
                    checkAvailabilityJs();
                } else {
                    //error
                    j$('#col1_error').show();
                    j$('.errorDetail1').show();
                    j$('#backToOpp').show();
                    j$('#col1_load').hide();
                    var mes;
                    if(result != null && result.message != null){
                        mes = result.message;
                    }else{
                        mes = event.message;
                    }
                    var err = j$('<div/>').html(mes).text();
                    j$('.errorDetail1').html(err);
                    j$('.errorDetail1_button').show();
                }               
            }, 
            {escape: true}
        ); 
    }
    
    function step2(){
        var arg = '{!Id}';        
        var namespace = '{!$RemoteAction.ControllerGlobalCloseAndWin.chiudiEVinciStep2}';

        j$('#col1_done').show();
        j$('#col1_load').hide();
        j$('#col2_load').show();
        j$('#col2_wait').hide();

        Visualforce.remoting.Manager.invokeAction(
            namespace,
            arg,                
            function(result, event){
                if (result != null && !result.isError) {
                    //ok, step executed with no errors
                    j$('#col2_done').show();
                    j$('#col2_load').hide();
                    j$('#col3_load').show();
                    j$('#col3_wait').hide();
                    step3();    
                } else {
                    //error
                    j$('#col2_error').show();
                    j$('.errorDetail2').show();
                    j$('#col2_load').hide();
                    j$('#backToOpp').show();
                    var mes;
                    if(result != null && result.message != null){
                        mes = result.message;
                    }else{
                        mes = event.message;
                    }
                    var err = j$('<div/>').html(mes).text();
                    j$('.errorDetail2').html(err);
                    j$('.errorDetail2_button').show();
                }
            }, 
            {escape: true}
        ); 
    }
    
    function step3(){
        var arg = '{!Id}';        
        var namespace = '{!$RemoteAction.ControllerGlobalCloseAndWin.chiudiEVinciStep3}';

        Visualforce.remoting.Manager.invokeAction(
            namespace,
            arg,                
            function(result, event){
                if (result != null && !result.isError) {
                    //ok, step executed with no errors
                    j$('#col3_done').show();
                    j$('#col3_load').hide();
                    j$('#col4_load').show();
                    j$('#col4_wait').hide();
                    step4();    
                } else {
                    //error
                    j$('#col3_error').show();
                    j$('.errorDetail3').show();
                    j$('#col3_load').hide();
                    j$('#backToOpp').show();
                    var mes;
                    if(result != null && result.message != null){
                        mes = result.message;
                    }else{
                        mes = event.message;
                    }
                    var err = j$('<div/>').html(mes).text();
                    j$('.errorDetail3').html(err);                    
                }
            }, 
            {escape: true}
        ); 
    }   
    
     function step4(){
        var arg = '{!Id}';        
        var namespace = '{!$RemoteAction.ControllerGlobalCloseAndWin.chiudiEVinciStep4}';

        Visualforce.remoting.Manager.invokeAction(
            namespace,
            arg,                
            function(result, event){
                if (result != null && !result.isError) {
                    //ok, execution complete!
                    j$('#col4_done').show();
                    j$('#col4_load').hide();  
                    //redirect back to opportunity
                    j$('#backToOpp').show();
                } else {
                    //error
                    j$('#col4_error').show();
                    j$('.errorDetail4').show();
                    j$('#col4_load').hide();
                    j$('#backToOpp').show();
                    var mes;
                    if(result != null && result.message != null){
                        mes = result.message;
                    }else{
                        mes = event.message;
                    }
                    var err = j$('<div/>').html(mes).text();
                    j$('.errorDetail4').html(err);
                    j$('.errorDetail4_button').show();
                }
            }, 
            {escape: true}
        ); 
    }
    
    //init(); -> call step 1 in document ready
    
    </script>
